<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_content">

        <RelativeLayout
            android:id="@+id/rl_pop_calendar_1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择入住/离店时间"
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <ImageView
                android:id="@+id/iv_pop_calendar_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:src="@drawable/icon_close_gray"/>
        </RelativeLayout>

        <jdjt.com.homepager.view.verticalCalendar.HotelCalendarView
            android:id="@+id/hotel_calendar_view_pop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_pop_calendar_1"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>