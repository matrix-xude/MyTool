<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_v_experience_booking_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择酒店"
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <TextView
                android:id="@+id/tv_v_experience_booking_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_v_experience_booking_1"
                android:background="@drawable/shape_v_experience_booking_hotel_name"
                android:drawableEnd="@drawable/icon_arrow_down_v_experience_booking"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="6dp"
                android:text="请选择酒店"
                android:textColor="#D2D2D3"
                android:textSize="13.44sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7.7dp"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_v_experience_booking_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="出发日期 :"
            android:textColor="@color/white"
            android:textSize="14.4sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/sliding_tab_v_experience_booking"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:tl_divider_padding="0dp"
            app:tl_divider_width="0dp"
            app:tl_indicator_color="@color/bg_light"
            app:tl_indicator_height="3dp"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width_equal_title="false"
            app:tl_tab_padding="0dp"
            app:tl_tab_width="70dp"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="@color/white"
            app:tl_textsize="13.44sp"/>

        <include layout="@layout/layout_week"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_v_experience_booking_calendar"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7.7dp"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="床型"
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_v_experience_booking_big_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/icon_bed_choice_v_experience_booking"
                    android:text="大床"
                    android:textColor="@color/white"
                    android:textSize="13.44sp"/>

                <TextView
                    android:id="@+id/tv_v_experience_booking_double_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/icon_bed_unchoice_v_experience_booking"
                    android:text="双床"
                    android:textColor="@color/white"
                    android:textSize="13.44sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="房间数量"
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_v_experience_booking_room_number">

                <ImageView
                    android:id="@+id/iv_v_experience_booking_check_people_minus"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/v_choice_room_minus"/>

                <View
                    android:layout_width="0.48dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_v_experience_booking_check_people_rooms"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14.4sp"/>

                <View
                    android:layout_width="0.48dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <ImageView
                    android:id="@+id/iv_v_experience_booking_check_people_plus"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/v_choice_room_plus"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_v_experience_booking_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="入住人姓名："
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <EditText
                android:id="@+id/et_v_experience_booking_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tv_v_experience_booking_2"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:hint="请填写入住人姓名"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#727272"
                android:textSize="13.44sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_v_experience_booking_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="手机号码："
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <EditText
                android:id="@+id/et_v_experience_booking_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/tv_v_experience_booking_3"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:hint="请填写入住人手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#727272"
                android:textSize="13.44sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <LinearLayout
            android:id="@+id/ll_v_experience_booking_more_need"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="更多需求："
                android:textColor="@color/white"
                android:textSize="14.4sp"/>

            <TextView
                android:id="@+id/tv_v_experience_booking_more_need"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="无"
                android:textColor="@color/white"
                android:textSize="13.44sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_arrow_right_gray"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.96dp"
            android:background="#393A3C"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="请选择要使用的核销码"
            android:textColor="@color/white"
            android:textSize="14.4sp"/>

        <TextView
            android:id="@+id/tv_v_experience_booking_check_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="您共预约0晚，请选择0个要使用核销码"
            android:textColor="#6C6D6E"
            android:textSize="12.48sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_v_experience_booking_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_v_experience_booking_commit"
            android:layout_width="match_parent"
            android:layout_height="46.1dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_light"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="14.4sp"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>