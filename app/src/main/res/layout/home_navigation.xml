<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/rl_home_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_navigation_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_home_navigation_name"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16.32sp"/>

        <View
            android:id="@+id/v_home_navigation_divide"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/tv_home_navigation_name"
            android:background="#2A2A2A"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_home_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/v_home_navigation_divide"/>
    </RelativeLayout>
</RelativeLayout>