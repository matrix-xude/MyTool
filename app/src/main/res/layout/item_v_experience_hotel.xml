<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_item_v_experience_hotel_1"
        android:layout_width="match_parent"
        android:layout_height="0.48dp"
        android:background="#27282A"/>

    <TextView
        android:id="@+id/tv_item_v_experience_hotel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="#6C6D6E"
        android:textSize="15.36sp"/>

    <View
        android:id="@+id/v_item_v_experience_hotel_2"
        android:layout_width="match_parent"
        android:layout_height="0.48dp"
        android:background="#27282A"/>

</LinearLayout>