<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_pop_hotel_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38.4dp"
        android:layout_below="@id/recycler_pop_hotel_list_type"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pop_hotel_list_type_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#383A3C"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="14.4sp"/>

        <TextView
            android:id="@+id/tv_pop_hotel_list_type_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F39800"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="14.4sp"/>
    </LinearLayout>

</RelativeLayout>