<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_calendar_recycler_month"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#393A3C"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <jdjt.com.homepager.view.verticalCalendar.HotelMonthView
        android:id="@+id/hotel_month_view_calendar_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_calendar_recycler_month"
        android:clickable="true"
        android:focusable="true"/>

</RelativeLayout>